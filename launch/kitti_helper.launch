<launch>
    

    <node name="kittiHelper" pkg="aloam_velodyne" type="kittiHelper" output="screen"> 
        <param name="dataset_folder" type="string" value="/home/dlr/kitti/dataset/" /> 
        <param name="sequence_number" type="string" value="10" />
        <param name="to_bag" type="bool" value="true" />
        <!-- 把 点云、双目图、真实位姿输出为bag -->
        <param name="output_bag_file" type="string" value="/home/dlr/kitti/dataset/odometry_bag/10_calib.bag" /> <!-- replace with your output folder _filtered -->
        <param name="publish_delay" type="int" value="1" />  <!-- 这个延迟什么？ -->
    </node>
    <arg name="rviz" default="true" />
    <group if="$(arg rviz)">
        <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find aloam_velodyne)/rviz_cfg/aloam_velodyne.rviz" />
    </group>
</launch>
